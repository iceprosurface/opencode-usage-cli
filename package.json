{
  "name": "opencode-usage-cli",
  "version": "1.0.4",
  "description": "A CLI tool for analyzing OpenCode session usage and costs",
  "type": "module",
  "main": "./dist/analyzer.js",
  "bin": {
    "opencode-usage": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iceprosurface/opencode-usage-cli.git"
  },
  "keywords": [
    "opencode",
    "cli",
    "usage",
    "analytics"
  ],
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/plugin": "1.0.220",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.4",
    "commander": "^12.0.0",
    "es-toolkit": "^1.43.0",
    "picocolors": "^1.1.1",
    "string-width": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/ui": "^4.0.16",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
